{% extends 'base.html.twig' %}

{# {% block title %}Hello TournoiController!{% endblock %} #}

{% block body %}

{% block title %}Créer un Tournoi{% endblock %}

{% block main %}
    <div class="container mt-4">
        <h2 class="text-center">Créer un Tournoi</h2>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <div class="card shadow-sm p-4">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                <div class="form-group">
                    {{ form_label(form.name, 'Nom du Tournoi') }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group mt-3">
                    {{ form_label(form.status, 'Statut') }}
                    {{ form_widget(form.status, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group mt-3">
                    {{ form_label(form.type, 'Type de Tournoi') }}
                    {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary">Créer</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% endblock %}
