{% extends 'base.html.twig' %}

{% block title %}Liste des Tournois{% endblock %}

{% block main %}
    <h1>Liste des Tournois</h1>

    <table border="1">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Statut</th>
                <th>Date de création</th>
                <th>Créé par</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for tournoi in tournois %}
                <tr>
                <td>
                    {% if tournoi.image %}
                        <img src="{{ asset('uploads/tournoi_images/' ~ tournoi.image) }}" alt="Image du tournoi" width="100" height="100">
                    {% else %}
                        Aucune image
                    {% endif %}
                </td>
                    <td>{{ tournoi.id }}</td>
                    <td>{{ tournoi.name }}</td>
                    <td>{{ tournoi.status }}</td>
                    <td>{{ tournoi.createdAt|date('d/m/Y H:i') }}</td>
                    <td>{{ tournoi.user ? tournoi.user.nom : 'Inconnu' }}</td>
                    <td>
                        <a href="{{ path('app_tournoi_edit', {'id': tournoi.id}) }}">Modifier</a>
                        <a href="{{ path('app_tournoi_delete', {'id': tournoi.id}) }}" 
                           onclick="return confirm('Voulez-vous vraiment supprimer ce tournoi ?');">Supprimer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">Aucun tournoi trouvé.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_tournoi_new') }}">Créer un nouveau tournoi</a>
{% endblock %}
